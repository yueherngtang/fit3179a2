{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Heatmap showing percentage of each ethnicity by state, sorted by poverty rate.",
    "data": {
      "url": "poverty_race.csv"
    },
    "transform": [
      {
        "filter": "datum.date == year"
      },
      {
        "joinaggregate": [
          {
            "op": "sum",
            "field": "population",
            "as": "total_population"
          }
        ],
        "groupby": ["state", "date"]
      },
      {
        "calculate": "datum.population / datum.total_population * 100",
        "as": "percentage"
      },
      {
        "calculate": "toNumber(datum['poverty rate'])",
        "as": "poverty_rate_numeric"
      }
    ],
    "params": [
      {
        "name": "year",
        "value": 2022,
        "bind": {
          "input": "select",
          "options": [2016, 2019, 2022],  
          "labels": ["2016", "2019", "2022"]
        }
      }
    ],
    "mark": "rect",
    "encoding": {
      "y": {
        "field": "state",
        "type": "ordinal",
        "sort": {
          "field": "poverty_rate_numeric",
          "order": "ascending"
        }
      },
      "x": {
        "field": "ethnicity",
        "type": "nominal"
      },
      "color": {
        "field": "percentage",
        "type": "quantitative",
        "scale": {
          "scheme": "blues"
        }
      },
      "tooltip": [
        {"field": "state", "type": "nominal"},
        {"field": "ethnicity", "type": "nominal"},
        {"field": "percentage", "type": "quantitative", "format": ".2f"},
        {"field": "poverty rate", "type": "quantitative"}
      ]
    }
  }
  